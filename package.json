{
  "name": "test-runner",
  "version": "0.0.0",
  "description": "Container template action using actions/toolkit",
  "main": "lib/main.js",
  "scripts": {
    "clear": "rimraf dist/*",
    "build": "npm run clear && tsc",
    "lint": "npx eslint . && tsc --noEmit",
    "lint:fix": "npx eslint --fix . && tsc --noEmit",
    "test": "npx jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/actions/container-toolkit-template.git"
  },
  "keywords": [
    "actions",
    "container",
    "toolkit",
    "setup"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/actions/container-toolkit-template/issues"
  },
  "homepage": "https://github.com/actions/container-toolkit-template#readme",
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@actions/exec": "^1.1.0",
    "@actions/github": "^5.0.0",
    "@actions/io": "^1.1.1",
    "@actions/tool-cache": "^1.7.1",
    "newman": "^5.3.1",
    "shelljs": "^0.8.5"
  },
  "devDependencies": {
    "@aenetworks/eslint-config-typescript": "^2.0.1",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.21",
    "@types/shelljs": "^0.8.10",
    "eslint": "^8.6.0",
    "jest": "^27.4.7",
    "rimraf": "^3.0.2",
    "standard-version": "^9.3.2",
    "ts-jest": "^27.1.2",
    "typescript": "^4.5.4"
  },
  "prettier": "@aenetworks/prettier-config",
  "jest": {
    "preset": "ts-jest",
    "testRegex": "(/__tests__/(?!__data__).*|(\\.|/)(test|spec))\\.[jt]sx?$"
  }
}
